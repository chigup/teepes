<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context=".onboarding.user_avatar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="50dp"
            android:id="@+id/image_convertor_view"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/satisfy"
            android:gravity="center"
            android:text="@string/flare"
            android:textColor="@color/pink"
            android:textSize="35dp"

            android:textStyle="bold" />

        <ImageView

            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="50dp"
            android:id="@+id/random_color"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
        android:src="@drawable/multicolor_circle_background"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            />


    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:text="Select your avatar"
        android:textColor="@color/grey_text"
        android:textSize="20dp" />



    <RelativeLayout
        android:visibility="gone"

        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/body_type"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="105dp"
            android:layout_marginTop="196dp"
            android:layout_marginEnd="105dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/bo6"
            android:tag="fbo2" />



        <ImageView
            android:scaleType="fitXY"

            android:visibility="gone"
               android:id="@+id/hair_accessory"
            android:layout_width="wrap_content"
            android:layout_height="279dp"
            android:layout_alignBottom="@+id/body_type"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="-1dp"
            android:src="@drawable/ha2"
            android:tag="ha1" />


        <ImageView

            android:id="@+id/cloth_img"
            android:layout_width="206dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="301dp"
            android:layout_marginEnd="103dp"
            android:scaleType="fitXY"
            android:src="@drawable/fsh1"
            android:tag="c1" />

        <ImageView

            android:id="@+id/eye_image"
            android:layout_width="59dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="176dp"
            android:layout_marginTop="226dp"
            android:layout_marginEnd="176dp"
            android:src="@drawable/fe1"
            android:tag="fe1" />

        <ImageView

            android:id="@+id/eye_accessory"
            android:layout_width="84dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="215dp"
            android:layout_marginEnd="164dp"
            android:tag="ea1" />


        <ImageView
            android:id="@+id/eye_brow_image"
            android:layout_width="60dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="175dp"
            android:layout_marginTop="211dp"
            android:layout_marginEnd="176dp"
            android:src="@drawable/feb1"
            android:tag="eb1" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="245dp"
            android:layout_marginEnd="183dp"
            android:src="@drawable/n1"
            android:tag="n1" />

        <ImageView
            android:id="@+id/mouth_img"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="185dp"
            android:layout_marginTop="269dp"
            android:layout_marginEnd="183dp"
            android:src="@drawable/fmo27"
            android:tag="mo18" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/male_hair_image"
            android:layout_width="115dp"
            android:layout_height="109dp"
            android:layout_alignBottom="@+id/body_type"
            android:layout_alignParentStart="true"
            android:layout_marginStart="147dp"
            android:layout_marginBottom="101dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/h11"
            android:tag="h1" />

        <ImageView
            android:id="@+id/female_hair_image"
            android:layout_width="212dp"
            android:layout_height="190dp"
            android:layout_alignBottom="@+id/body_type"
            android:layout_alignParentStart="true"
            android:layout_marginStart="99dp"
            android:layout_marginBottom="18dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/fh9"
            android:tag="h1" />
    </RelativeLayout>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:visibility="gone"
        android:id="@+id/intrest_black_color_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"



        android:elevation="4dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_weight="1"
    android:background="@color/lightGrey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:background="@color/gray"
            android:id="@+id/body_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center_vertical"

            android:visibility="gone"
            android:background="@color/gray"
            android:id="@+id/nose_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:background="@color/gray"
            android:id="@+id/cloth_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
android:background="@color/gray"
        android:id="@+id/eye_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView

        android:background="@color/gray"
android:visibility="gone"
        android:id="@+id/eye_brows_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/eye_accessory_recycler"
android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/gray"
android:visibility="gone"
        android:id="@+id/mouth_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="wrap_content"
android:background="@color/gray"
            android:id="@+id/hair_recycler"
            android:layout_width="match_parent"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView

            android:background="@color/gray"
android:visibility="gone"
            android:id="@+id/hair_color_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hair_accessory_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:visibility="gone" />




    </LinearLayout>

</androidx.core.widget.NestedScrollView>


        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

<androidx.coordinatorlayout.widget.CoordinatorLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


<LinearLayout
    android:visibility="gone"
    android:layout_marginTop="2dp"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/generate_color"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/pink"
        android:elevation="10dp"
        android:foregroundGravity="center"
        android:layout_gravity="start"

        android:src="@drawable/ic_autorenew_white_24dp"
        app:fabCustomSize="40dp" />

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background"
        android:textColor="@color/grey_text"/>

</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

           android:visibility="invisible"
            android:layout_width="match_parent"
            android:id="@+id/get_image_from"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>

    <Button
        android:layout_marginTop="10dp"

        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/done_avatar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/pink_button"
        android:fontFamily="@font/roboto"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />


</LinearLayout>