<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_details_layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.airbnb.lottie.LottieAnimationView
        android:visibility="invisible"
        android:id="@+id/floader"
        app:lottie_loop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        app:lottie_rawRes="@raw/single_feed_loader" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/main_screen_bck"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/rectangular_background">

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1"
                        android:text="Profile"
                        android:textColor="@color/white"
                        android:textSize="24dp" />


                    <com.github.florent37.shapeofview.shapes.RoundRectView
                        android:id="@+id/intrest_black_color_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                       android:background="@drawable/text_box"
                        android:elevation="4dp"
                        app:shape_roundRect_bottomLeftRadius="25dp"
                        app:shape_roundRect_bottomRightRadius="25dp"
                        app:shape_roundRect_topLeftRadius="25dp"
                        app:shape_roundRect_topRightRadius="25dp">
                        <ImageView
                            android:src="@color/grey_text"
                            android:id="@+id/desc_image"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:scaleType="fitCenter" />
                        <ImageView
                            android:visibility="invisible"
                            android:layout_gravity="center"
                            android:id="@+id/white_heart"
                            android:layout_width="150dp"
                            android:src="@drawable/white_heart"
                            android:layout_height="150dp"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/white_cross"
                            android:layout_width="150dp"
                            android:src="@drawable/ic_cross"
                            android:visibility="invisible"
                            android:layout_height="150dp"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/share"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="right|end|bottom"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/white"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_share_small"
                            app:fabCustomSize="60dp" />
                    </com.github.florent37.shapeofview.shapes.RoundRectView>

                </LinearLayout>









            </FrameLayout>


            <LinearLayout
                android:layout_gravity="center_vertical|center"
                android:id="@+id/name"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/desc_image"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/card_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="your name"
                            android:textColor="@color/grey_text"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" , "
                            android:textColor="@color/grey_text"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/card_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="your age"
                            android:textColor="@color/grey_text"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/college_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"

                            android:text="your college"
                            android:textColor="@color/grey_text"
                            android:textSize="18dp" />


                    </LinearLayout>


                </LinearLayout>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/right_swipe"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:foregroundGravity="center"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginEnd="27dp"
                    android:layout_marginBottom="5dp"
                  android:layout_marginTop="5dp"
                    android:backgroundTint="@color/theme_dark_pink"
                    android:src="@drawable/ic_like"
                    app:fabCustomSize="60dp" />


            </LinearLayout>


            <LinearLayout

                android:id="@+id/intersts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                android:foregroundGravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Interests"
                        android:textColor="@color/theme_dark_pink"
                        android:textSize="24dp" />


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/super_like"
                        android:layout_width="60dp"

                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="27dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/fabe_color"
                        android:src="@drawable/ic_comment_small"
                        app:fabCustomSize="60dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/user_details_intersts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       />
                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_upper_commas"/>
                            <TextView

                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginLeft="25dp"
                                android:id="@+id/small_desc"
                                android:maxLength="100"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="your desc"
                                android:textColor="@color/grey_text"
                                android:textSize="15dp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_lower_commas"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/left_swipe"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="right"
                            android:layout_marginEnd="27dp"
                            android:backgroundTint="@color/theme_dark_pink"
                            android:rotation="45"
                            android:src="@drawable/ic_pharmacy_"
                            app:fabCustomSize="60dp" />


                        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                            android:id="@+id/percentage_match"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            app:direction="clockwise"
                            app:enableProgressAnimation="true"
                            app:fillBackground="true"
                            app:progressBackgroundColor="@color/theme_dark_pink"
                            app:progressColor="@color/theme_dark_pink"
                            app:textColor="@color/white"
                            app:textSize="15dp"

                            />
                        <TextView
                            android:id="@+id/percentage_match_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="center|center_horizontal"
                            android:text="Match"
                            android:textColor="@color/grey_text"
                            android:textSize="15dp"/>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about_me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_me_text"
                        android:text="About Me"
                        android:textColor="@color/theme_dark_pink"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/q1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Q this is ques1"
                            android:textColor="@color/grey_text"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/q1_ans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                           android:gravity="start"
                            android:outlineAmbientShadowColor="@color/theme_text_color"
                            android:shadowColor="@color/theme_text_color"

                            android:text="ans one"
                            android:textColor="@color/grey_text"
                            android:textSize="20dp" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/q2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Q thvvvvvvvvvvvvvvvvvvvvvvvvis is ques1"
                            android:textColor="@color/grey_text"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/q2_ans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:gravity="start"
                            android:outlineAmbientShadowColor="@color/theme_text_color"
                            android:shadowColor="@color/theme_text_color"

                            android:text="ans two"
                            android:textColor="@color/grey_text"
                            android:textSize="20dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/q3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Q this is ques1"
                            android:textColor="@color/grey_text"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/q3_ans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:gravity="start"
                            android:outlineAmbientShadowColor="@color/theme_text_color"
                            android:shadowColor="@color/theme_text_color"

                            android:text="ans three"
                            android:textColor="@color/grey_text"
                            android:textSize="20dp" />

                    </LinearLayout>





                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/social_layout"
                android:layout_height="wrap_content">



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/show_more"
                        android:orientation="vertical"
                       >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social"
                            android:textColor="@color/theme_dark_pink"
                            android:textSize="24dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/user_details_social_feed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


            </LinearLayout>
            <FrameLayout
                android:id="@+id/show_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/intersts"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/see_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/intreset_box"
                    android:backgroundTint="@color/theme_dark_pink"
                    android:gravity="center"

                    android:text="See More"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray" />


            </FrameLayout>





        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</LinearLayout>
